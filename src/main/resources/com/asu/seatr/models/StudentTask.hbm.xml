<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="com.asu.seatr.models">
 
    <class name="StudentTask" table="student_task">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>        
        <many-to-one name="course_id" column="id" 
 			class="com.asu.seatr.models.Course" not-null="true"/>
 		<many-to-one name="student_id" column="id" 
 			class="com.asu.seatr.models.Student" not-null="true"/>
 		<many-to-one name="task_id" column="id" 
 			class="com.asu.seatr.models.Task" not-null="true"/> 		
    </class>
 
</hibernate-mapping>